{% extends 'base.html.twig' %}

{% block title %}Hello MemoController!{% endblock %}

{% block body %}

    <style>
        h1 {
            margin-bottom: 50px;
        }

        h3 {
            margin-bottom: 25px;
        }

        .input-text {            
            width: 50%;
        }

        .input-p {
            margin-bottom: 20px;
            width: 50%
        }

        button {
            background-color: #E4E4E4;
            border: none;
            cursor: pointer;
            display: block;
            font-weight: 700;
            margin-top: 20px;
            padding: 10px;
        }
    </style>

    <div class="container">
        <h1>Nouveau mémo :</h1>

        {{ form_start(form) }}
            <div>{{ form_row(form.memo_text) }}</div>

            <div>{{ form_row(form.memo_delay) }}</div>

            <button type="submit">Créer le mémo</button>
        {{ form_end(form) }}
    </div>

{% endblock %}
            
            
